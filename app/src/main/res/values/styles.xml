<!-- styling for phones -->

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primary</item>

        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="colorAccent">@color/accent</item>

        <item name="toolbarStyle">@style/Toolbar</item>

    </style>

    <!-- Theme for the main activity -->
    <!-- stub for pre Lollipop -->
    <style name="AppTheme.Main" parent="AppTheme" />

    <!-- Theme for the detail activity -->
    <!-- stub for pre Lollipop -->
    <style name="AppTheme.Detail" parent="AppTheme" />

    <!-- style for using a list item selector drawable.
         but in phones it is just a stub. -->
    <style name="ForecastStyle" />

    <!-- main activity toolbar style -->
    <!-- extends from the widget toolbar -->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">

        <!-- have a primary color background, since toolbars have a default transparent background -->
        <item name="android:background">?attr/colorPrimary</item>

        <!-- pop up light since the main activity has a dark theme -->
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>

    </style>

</resources>
