<!-- styling for phones -->

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primary</item>

        <item name="colorPrimaryDark">@color/primary_dark</item>

    </style>

    <!-- Main activity theme. -->
    <!-- Puts a custom app bar having the app's name and a sunny logo. -->
    <style name="ForecastTheme" parent="AppTheme">

        <item name="actionBarStyle">@style/ActionBar.Solid.Sunshine.NoTitle</item>

    </style>

    <!-- Settings activity theme. -->
    <!-- Puts a custom app bar having the app's name and a sunny logo. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <!-- style for using a list item selector drawable.
         but in phones it is just a stub. -->
    <style name="ForecastListStyle">
    </style>

    <!-- custom theme to make an action bar with a logo -->
    <style name="ActionBar.Solid.Sunshine.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="displayOptions">useLogo|showHome</item>

        <item name="logo">@drawable/ic_logo</item>

    </style>

</resources>
