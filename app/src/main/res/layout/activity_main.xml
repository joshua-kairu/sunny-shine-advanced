<!-- base main activity layout - for phones. should match the forecast pane of the tablet UI. -->

<!-- contains the forecast fragment alone, and a toolbar. -->

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_height="match_parent"

    android:layout_width="match_parent"

    android:orientation="vertical"

    >

    <!-- toolbar -->

    <android.support.v7.widget.Toolbar

        android:layout_width="match_parent"

        android:layout_height="?attr/actionBarSize"

        android:id="@+id/am_toolbar"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        >

        <!-- the logo inside it -->

        <ImageView

            android:layout_width="wrap_content"

            android:layout_height="match_parent"

            android:src="@drawable/ic_logo"

            android:contentDescription="@string/a11y_toolbar_icon"

            android:scaleType="center"

            />

    </android.support.v7.widget.Toolbar>

    <fragment

        android:id="@+id/am_f_forecast"

        android:name="com.jlt.sunshine.ForecastFragment"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        tools:context=".MainActivity"

        tools:layout="@android:layout/list_content"

        />

</LinearLayout>

