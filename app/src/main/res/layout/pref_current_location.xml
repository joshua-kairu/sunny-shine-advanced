<!-- layout to show the image to click when to use the Google Places API -->

<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/current_location_picker"

    android:layout_width="48dp"

    android:layout_height="match_parent"

    >

    <!-- the location image -->

    <ImageView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:src="@drawable/ic_current_location"

        android:contentDescription="@string/a11y_current_location_description"

        android:layout_gravity="end|center_vertical"

        android:tint="@color/material_teal_500"

        />

</FrameLayout>