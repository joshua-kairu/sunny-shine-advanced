<!-- transition to enter into the details window in portrait -->

<!-- fade everything in -->
<!-- slide toolbar from top -->
<!-- slide extras from bottom -->
<transitionSet

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:transitionOrdering="together"

    android:duration="@integer/transition_animation_duration"

    >

    <!-- fade everything in -->

    <!-- except the status and nav bars -->
    <fade>

        <targets>

            <target android:excludeId="@android:id/statusBarBackground" />

            <target android:excludeId="@android:id/navigationBarBackground" />

        </targets>

    </fade>

    <!-- slide toolbar from top -->

    <slide android:slideEdge="top">

        <targets>

            <target android:targetId="@id/detail_toolbar" />

        </targets>

    </slide>

    <!-- slide extras from bottom -->

    <slide android:slideEdge="bottom">

        <targets>

            <target android:targetId="@id/detail_extras_grid"/>

        </targets>

    </slide>

</transitionSet>